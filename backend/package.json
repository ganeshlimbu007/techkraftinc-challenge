{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "db:drop": "psql \"$DATABASE_URL\" -c \"DROP SCHEMA public CASCADE; CREATE SCHEMA public;\"",
    "db:migrate": "psql \"$DATABASE_URL\" -f src/db/migrations/001_create_extensions.sql && psql \"$DATABASE_URL\" -f src/db/migrations/002_create_tickets.sql && psql \"$DATABASE_URL\" -f src/db/migrations/003_create_reservations.sql",
    "db:seed": "psql \"$DATABASE_URL\" -f src/db/seed/001_seed_tickets.sql",
    "db:setup": "npm run db:drop && npm run db:migrate && npm run db:seed",
    "start": "node dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "node-cron": "^4.2.1",
    "pg": "^8.17.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
